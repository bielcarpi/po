func recFactorial(num) {
    if num >= 1 {
        ret num * recFactorial(num - 1)
    }
    else {
        ret 1
    }
}

main() {
    //prints(" --- Factorial Calculator --- \n")
    //prints("Enter a number: ")
    var num = 3
    //prints("Calculating the factorial of ")
    print(num)
    var factorial = recFactorial(num)
    //prints("The factorial result is: ")
    print(factorial)
}